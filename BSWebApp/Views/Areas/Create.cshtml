@model BSWebApp.Models.Area

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ResLayout.cshtml";
}

<h1>Create</h1>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaName" class="control-label"></label>
                <select asp-for="AreaName" class="form-control">
                    <option value="0">Main</option>
                    <option value="1">Outside</option>
                    <option value="2">Balcony</option>
                </select>
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaDescription" class="control-label"></label>
                <input asp-for="AreaDescription" class="form-control" />
                <span asp-validation-for="AreaDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
