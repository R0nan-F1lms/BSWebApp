@model IEnumerable<BSWebApp.Models.Sitting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ResLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SittingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SittingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.SittingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SittingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SittingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
