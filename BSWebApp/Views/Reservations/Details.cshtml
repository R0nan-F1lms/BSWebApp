@model BSWebApp.Models.Reservation

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ResLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        @*Reservation Details*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GuestCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GuestCount)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationSource)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationSource)
        </dd>
        @*Sitting Details*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sitting)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sitting.SittingType) -- @Html.DisplayFor(model => model.Sitting.StartTime) To @Html.DisplayFor(model => model.Sitting.EndTime)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("Staff") || User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ReservationsId">Edit</a>
    }

    <a asp-action="Index">Back to List</a>
</div>
